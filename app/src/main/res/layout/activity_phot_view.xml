<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">
    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/faClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="{ion-close}"
        android:textSize="@dimen/close_icon_size"
        android:textColor="@color/primaryText"
        android:layout_margin="@dimen/layout_padding"/>

    <com.github.chrisbanes.photoview.PhotoView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/photo_view"
        android:layout_below="@id/faClose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:visibility="visible"/>

    <com.susankya.swadesibidhesi.Generic.HackyViewPager
        android:layout_below="@id/photo_view"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>