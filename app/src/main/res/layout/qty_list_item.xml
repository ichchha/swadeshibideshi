<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level1_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cat_level_one_layout_height"
    android:layout_marginLeft="@dimen/extra_large_padding"
    android:layout_marginRight="@dimen/nav_item_margin"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/qtyTitle"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/extra_large_padding"
        android:layout_toRightOf="@id/cat_icon"
        android:text="@string/nav_category_txt"
        android:textAllCaps="false"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/small_txt_size"
        android:textStyle="bold" />

</RelativeLayout>
