<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_header_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_large_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/nav_item_margin"
            android:background="@drawable/profile_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/nav_item_margin"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/general_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/facebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/nav_item_margin">

                    <ImageView
                        android:scaleType="centerInside"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_facebook" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/twitter"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/medium_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_twitter"
                        android:visibility="visible" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/instagram"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="@dimen/medium_padding">

                    <ImageView
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_instagram"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_txt_size" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/whitney_semibold"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/seeMyOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:text="@string/my_orders"
        android:textColor="@color/white"
        android:textSize="@dimen/general_text_size"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingBottom="@dimen/medium_padding">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_margin"
            android:fontFamily="@font/whitney_semibold"
            android:text="@string/txt_login"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/whitney_semibold"
            android:text="."
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:fontFamily="@font/whitney_semibold"
            android:text="@string/txt_signup"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/homeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/whitney_semibold"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingTop="@dimen/nav_item_margin"
        android:paddingBottom="@dimen/normal_padding"
        android:text="@string/home"
        android:textAllCaps="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/medium_txt_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_view_height"
        android:background="@color/colorWhiteSecondary" />

    <TextView
        android:id="@+id/somethingHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/whitney_light"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingTop="@dimen/normal_padding"
        android:text="@string/nav_category_txt"
        android:textAllCaps="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/small_txt_size"
        android:visibility="gone"/>
    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/whitney_semibold"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingTop="@dimen/nav_item_margin"
        android:paddingBottom="@dimen/normal_padding"
        android:text="@string/myOrders"
        android:textAllCaps="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/general_text_size"/>
    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/connectToFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/whitney_semibold"
        android:paddingLeft="@dimen/nav_item_margin"
        android:paddingTop="@dimen/nav_item_margin"
        android:paddingBottom="@dimen/normal_padding"
        android:text="@string/connectToFacebook"
        android:textAllCaps="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/general_text_size" />

</LinearLayout>
